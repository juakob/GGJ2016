<?xml version="1.0" encoding="utf-8"?>
<project>
	<!-- NMML reference: https://gist.github.com/1763850 -->
	
	<!-- metadata, make sure 'package' is at least 3 segments (ie. com.mycompany.myproject) -->
	<meta title="GGJ2016" package="GGJ2016" version="1.0.0" company="Joaquin" />
	
	<!-- output -->
	<app main="Main" file="GGJ2016" path="bin" />
	
	<window background="#000000" fps="60" />
	<window width="1280" height="720" unless="mobile" />
	<window orientation="landscape" vsync="false" antialiasing="0" if="cpp" />
	
	<!-- classpath, haxe libs -->
	<haxedef name="FLX_RECORD" />
	<app swf-version="11.8" if="flash"/>
	<source path="src" />
	<haxelib name="openfl" />
	<haxelib name="actuate" />
	<haxelib name="flixel"/>
	
	<!-- assets -->
	<icon path="assets/openfl.svg" />
	<assets path="assets/img" rename="img" />
	<assets path="assets/map" rename="map"/>
	<assets path="assets/spritesheet" rename="spritesheet"/>
	<assets path="assets/sounds" rename="sounds" include="*.mp3">
		
	
	
	</assets>
	
	
	<!-- optimize output
	<haxeflag name="-dce full" /> -->
	
</project>